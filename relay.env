# =============================================================================
# NetBird Relay Server - Environment Configuration
# =============================================================================
# Copy this file to relay.env and update the values for your deployment
# Usage: cp relay.env.example relay.env
# =============================================================================

# Logging
NB_LOG_LEVEL=info

# Relay Server Configuration
NB_LISTEN_ADDRESS=:80

# Exposed Address
# Update this to match your NetBird domain
# Use "rel://" for HTTP or "rels://" for HTTPS
# Include /relay path since it's proxied through NGINX
NB_EXPOSED_ADDRESS=rels://netbird.example.com:443/relay

# Authentication Secret
# Generate with: openssl rand -base64 32
# IMPORTANT: This must match the Relay.Secret in management.json
NB_AUTH_SECRET=your-relay-secret-here
