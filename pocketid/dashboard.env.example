# =============================================================================
# NetBird Dashboard - Environment Configuration
# =============================================================================
# Copy this file to dashboard.env and update the values for your deployment
# Usage: cp dashboard.env.example dashboard.env
# =============================================================================

# Endpoints
# Update these to match your NetBird domain
NETBIRD_MGMT_API_ENDPOINT=https://netbird.example.com
NETBIRD_MGMT_GRPC_API_ENDPOINT=https://netbird.example.com

# OIDC Configuration
# Update AUTH_AUDIENCE and AUTH_CLIENT_ID with your PocketID client ID
# after creating the OIDC client in PocketID
AUTH_AUDIENCE=your-pocketid-client-id
AUTH_CLIENT_ID=your-pocketid-client-id
AUTH_AUTHORITY=https://auth.example.com
USE_AUTH0=false
AUTH_SUPPORTED_SCOPES=openid profile email groups offline_access
AUTH_REDIRECT_URI=/auth
AUTH_SILENT_REDIRECT_URI=/silent-auth

# Token Configuration
NETBIRD_TOKEN_SOURCE=idToken

# SSL Configuration
NGINX_SSL_PORT=443
LETSENCRYPT_DOMAIN=none
